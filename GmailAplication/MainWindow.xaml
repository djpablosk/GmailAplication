<Window x:Class="GmailAplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GmailAplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition   Height="50"  />
            <RowDefinition   Height="*"  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />

            <ColumnDefinition Width="600"/>
        </Grid.ColumnDefinitions>


        <Rectangle Grid.Column="1" Grid.Row="0" Fill="#FF66668E" Grid.ColumnSpan="2"/>
        <Rectangle Grid.Column="0" Grid.Row="0" Fill="#FF66668E"/>
        <Rectangle Grid.Column="0" Grid.Row="1" Fill="#FF403E7F" />
        <Rectangle Grid.Column="1" Grid.Row="1" Fill="#FF989898" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Center" Height="45" TextWrapping="Wrap" Text=" Gmail Client" VerticalAlignment="Top" Width="280" FontSize="36" FontFamily="BankGothic Lt BT" FontStyle="Italic" FontWeight="Bold" Foreground="#FF842121" Margin="0,5,0,0"/>
        <Button x:Name="SendButton" Grid.Column="1" Content="Send" HorizontalAlignment="Left" Margin="25,11,0,0" VerticalAlignment="Top" Height="33" Width="64" FontSize="18" FontFamily="Arial Black" Background="#FF08FF00" BorderBrush="{x:Null}" Click="Button_Click"/>
        <Button Grid.Column="1" Content="Delete" HorizontalAlignment="Left" Margin="112,11,0,0" VerticalAlignment="Top" Height="33" Width="64" FontSize="16" FontFamily="Arial Black" Background="Red" BorderBrush="{x:Null}" Grid.ColumnSpan="2" Click="Button_Click_1"/>
        <ListBox x:Name="SendedEmails" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Height="348" Margin="19,15,0,0" VerticalAlignment="Top" Width="464" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#FFAFAFAF" Foreground="Black" BorderBrush="Black" SelectionChanged="ListBox_SelectionChanged" FontSize="18"/>
        <TextBox Grid.Row="1" x:Name="GmailClient" HorizontalAlignment="Left" Height="34" Margin="21,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" BorderBrush="{x:Null}" Background="#FF777676" TextChanged="GmailClient_TextChanged" FontSize="20"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Left" Height="21" Margin="21,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"><Run Text="Tu daj prijimatela:"/><LineBreak/><Run/></TextBlock>
        <TextBox Grid.Row="1" x:Name="subejctBox" HorizontalAlignment="Left" Height="34" Margin="21,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" BorderBrush="{x:Null}" Background="#FF777676" TextChanged="GmailClient_TextChanged" FontSize="20"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Left" Height="21" Margin="21,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Predmet:"/>
        <TextBox Grid.Row="1" x:Name="ContentBox" HorizontalAlignment="Left" Height="179" Margin="21,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" BorderBrush="{x:Null}" Background="#FF777676" TextChanged="GmailClient_TextChanged" FontSize="20"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Left" Height="20" Margin="21,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="Obsah:"/>
    </Grid>
</Window>
